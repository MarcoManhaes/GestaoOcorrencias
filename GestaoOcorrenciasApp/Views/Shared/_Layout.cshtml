<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestaoOcorrenciasApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav flex-grow-1 d-flex justify-content-center">
                    <li class="nav-item" style="padding-right:30px;">
                        <a class="nav-link font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.5rem; color: darkblue;">| GestaoOcorrenciasApp |</a>
                    </li>
                    <li class="nav-item" style="padding-right:30px;">
                        <a class="nav-link font-weight-bold" asp-area="" asp-controller="Home" asp-action="Cliente" style="font-size: 1.5rem; color: darkblue;">| Cliente |</a>
                    </li>
                    <li class="nav-item" style="padding-right:30px;">
                        <a class="nav-link font-weight-bold" asp-area="" asp-controller="Home" asp-action="Ocorrencia" style="font-size: 1.5rem; color: darkblue;">| Gestão de Ocorrências |</Gestão></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - GestaoOcorrenciasApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script type='text/javascript' src='knockout-3.5.1.js'></script>*@
    <script src="~/lib/knockout-3.5.1.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.7/inputmask.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
